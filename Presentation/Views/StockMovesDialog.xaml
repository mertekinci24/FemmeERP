<Window x:Class="InventoryERP.Presentation.Views.StockMovesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:InventoryERP.Presentation.Converters"
        Title="Hareketler" Height="450" Width="800">
    <Window.Resources>
        <converters:QtyColorConverter x:Key="QtyColorConverter" />
    </Window.Resources>
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8" VerticalAlignment="Center">
            <TextBlock Text="Tarih (BaÅŸ)" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <DatePicker x:Name="FromDate" Width="130"/>
            <TextBlock Text=" - " VerticalAlignment="Center" Margin="6,0,6,0"/>
            <TextBlock Text="Tarih (BitiÅŸ)" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <DatePicker x:Name="ToDate" Width="130"/>
            <Button x:Name="RefreshBtn" Content="Yenile" Margin="12,0,0,0"/>
            <Button x:Name="ExportBtn" Content="Excel'e aktar" Margin="8,0,0,0"/>
            <Button x:Name="CloseBtn" Content="Kapat" Margin="8,0,0,0"/>
        </StackPanel>

        <DataGrid x:Name="Grid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tarih" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="90" />
                <DataGridTextColumn Header="Belge Türü" Binding="{Binding DocType}" Width="110" />
                <DataGridTextColumn Header="Belge No" Binding="{Binding DocNo}" Width="100" />
                
                <!-- R-280: Partner Name (Cari) -->
                <DataGridTextColumn Header="Cari" Binding="{Binding PartnerName}" Width="180" FontWeight="SemiBold" />
                
                <!-- R-280: Colored Quantity (In/Out) -->
                <DataGridTextColumn Header="Miktar" Binding="{Binding Qty, StringFormat='{}{0:N2}'}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Foreground" Value="{Binding Qty, Converter={StaticResource QtyColorConverter}}" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Birim Maliyet" Binding="{Binding UnitCost, StringFormat='{}{0:N2}'}" Width="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                             <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Açıklama" Binding="{Binding Ref}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
