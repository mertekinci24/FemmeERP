<UserControl x:Class="InventoryERP.Presentation.Views.PartnerListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:common="clr-namespace:InventoryERP.Presentation.Common"
             mc:Ignorable="d"
             Background="#F5F5F5"
             x:Name="PartnerListControl">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <TextBlock Grid.Row="0"
                   Text="Cari Hesaplar"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="0,0,0,15"
                   Foreground="#333333"/>

        <!-- Araç Çubuğu -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Yeni Cari"
                    Command="{Binding NewCommand}"
                    Width="120" Height="35"
                    Background="#4CAF50" Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,10,0"/>

            <Button Content="İçeri Aktar"
                    Command="{Binding ImportFromExcelCommand}"
                    Width="130" Height="35"
                    Background="#FF9800" Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,10,0"
                    ToolTip="Excel dosyasından cari listesi içeri aktar"/>

            <Button Content="Düzenle"
                    Command="{Binding EditCommand}"
                    Width="100" Height="35"
                    Background="#2196F3" Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,10,0"/>

            <Button Content="Sil"
                    Command="{Binding DeleteCommand}"
                    Width="100" Height="35"
                    Background="#F44336" Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,10,0"/>

            <Button Content="Yenile"
                    Command="{Binding RefreshCommand}"
                    Width="100" Height="35"
                    Background="#607D8B" Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,20,0"/>

            <!-- Arama Kutusu -->
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Width="250" Height="35"
                     VerticalContentAlignment="Center"
                     Padding="8,0"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                            <VisualBrush.Visual>
                                                <TextBlock Text="Ara (Ad, VKN, TCKN)..."
                                                           Foreground="#999999"
                                                           Margin="8,0"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </StackPanel>

        <!-- Liste -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Partners}"
                  SelectedItem="{Binding SelectedPartner}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  CanUserResizeRows="False"
                  CanUserAddRows="False"
                  Background="White"
                  BorderBrush="#DDDDDD"
                  BorderThickness="1"
                  RowDetailsVisibilityMode="VisibleWhenSelected">
            <DataGrid.Resources>
                <common:BindingProxy x:Key="Proxy" Data="{Binding}" />
            </DataGrid.Resources>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="Düzenle"
                                          Command="{Binding Data.EditCommand, Source={StaticResource Proxy}}"
                                          CommandParameter="{Binding}" />
                                <MenuItem Header="Sil"
                                          Command="{Binding Data.DeleteCommand, Source={StaticResource Proxy}}"
                                          CommandParameter="{Binding}" />
                                <Separator />
                                <MenuItem Header="Hesap Ekstresi"
                                          Command="{Binding Data.OpenStatementCommand, Source={StaticResource Proxy}}"
                                          CommandParameter="{Binding}" />
                                <MenuItem Header="Tahsilat/Ödeme Ekle"
                                          Command="{Binding Data.AddTransactionCmd, Source={StaticResource Proxy}}"
                                          CommandParameter="{Binding}" />
                                <Separator />
                                <MenuItem Header="Kartı Dışa Aktar"
                                          Command="{Binding Data.ExportSinglePartnerCmd, Source={StaticResource Proxy}}"
                                          CommandParameter="{Binding}" />
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#BBDEFB"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border Background="#F5F9FF" BorderBrush="#90CAF9" BorderThickness="1" Padding="12" Margin="0,0,0,4">
                        <StackPanel>
                            <TextBlock Text="{Binding LastMovementSummary, TargetNullValue='Henüz hareket bulunmuyor.'}"
                                       FontWeight="SemiBold" Foreground="#0D47A1"/>
                            <UniformGrid Columns="3" Margin="0,10,0,0">
                                <StackPanel>
                                    <TextBlock Text="Toplam Borç" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding TotalDebit, StringFormat='{}{0:N2}'}"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Toplam Alacak" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding TotalCredit, StringFormat='{}{0:N2}'}"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Son Bakiye" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding BalanceTry, StringFormat='{}{0:N2}'}"/>
                                </StackPanel>
                            </UniformGrid>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBlock Text="Son Borç:" FontWeight="SemiBold" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding LastDebit, StringFormat='{}{0:N2}', TargetNullValue='0,00'}" Margin="0,0,12,0"/>
                                <TextBlock Text="Son Alacak:" FontWeight="SemiBold" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding LastCredit, StringFormat='{}{0:N2}', TargetNullValue='0,00'}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#2196F3"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="10,8"/>
                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                    <Setter Property="BorderBrush" Value="#1976D2"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Cari Adı" Binding="{Binding Name}" Width="2*" MinWidth="150"/>
                <DataGridTextColumn Header="Tip" Binding="{Binding Role}" Width="*" MinWidth="80"/>
                <DataGridTextColumn Header="VKN" Binding="{Binding TaxId}" Width="*" MinWidth="100"/>
                <DataGridTextColumn Header="TCKN" Binding="{Binding NationalId}" Width="*" MinWidth="100"/>
                <DataGridTextColumn Header="Borç" Binding="{Binding TotalDebit, StringFormat='{}{0:N2}'}" Width="*" MinWidth="110"/>
                <DataGridTextColumn Header="Alacak" Binding="{Binding TotalCredit, StringFormat='{}{0:N2}'}" Width="*" MinWidth="110"/>
                <DataGridTextColumn Header="Bakiye" Binding="{Binding BalanceTry, StringFormat='{}{0:N2}'}" Width="*" MinWidth="110"/>
                <DataGridTextColumn Header="Kredi Limiti" Binding="{Binding CreditLimitTry, StringFormat='{}{0:N2}'}" Width="*" MinWidth="110"/>
                <DataGridCheckBoxColumn Header="Aktif" Binding="{Binding IsActive}" Width="80" MinWidth="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Durum Çubuğu -->
        <Border Grid.Row="3"
                Background="#EEEEEE"
                Padding="10,8"
                BorderBrush="#CCCCCC"
                BorderThickness="0,1,0,0"
                Margin="0,10,0,0">
            <TextBlock>
                <Run Text="Toplam Cari: "/>
                <Run Text="{Binding PartnerCount, Mode=OneWay}" FontWeight="Bold"/>
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
