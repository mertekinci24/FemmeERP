<Window x:Class="InventoryERP.Presentation.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Giriş" Height="220" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <DockPanel Margin="16">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Tamam" Width="80" Margin="0,0,8,0" IsDefault="True" Click="OkButton_Click"/>
            <Button Content="İptal" Width="80" IsCancel="True"/>
        </StackPanel>
        
        <StackPanel>
            <TextBlock Text="{Binding Prompt}" TextWrapping="Wrap" Margin="0,0,0,12"/>
            <TextBox Name="InputTextBox" Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" 
                     Padding="4" FontSize="14"/>
        </StackPanel>
    </DockPanel>
</Window>
