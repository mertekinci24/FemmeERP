<Window x:Class="InventoryERP.Presentation.Views.PartnerStatementDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ekstre" Height="500" Width="800">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="BaÅŸlangÄ±Ã§" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <DatePicker x:Name="FromDate" Width="140"/>
            <TextBlock Text="BitiÅŸ" VerticalAlignment="Center" Margin="8,0,8,0"/>
            <DatePicker x:Name="ToDate" Width="140"/>
            <Button x:Name="RefreshBtn" Content="Yenile" Margin="8,0,0,0"/>
            <Button x:Name="PdfBtn" Content="PDF" Margin="8,0,0,0"/>
            <Button x:Name="ExcelBtn" Content="Excel" Margin="8,0,0,0"/>
        </StackPanel>

        <DataGrid x:Name="Grid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tarih" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="Auto"/>
                <DataGridTextColumn Header="Belge Türü" Binding="{Binding DocType}" Width="Auto"/>
                <DataGridTextColumn Header="Belge No" Binding="{Binding DocNumber}" Width="Auto"/>
                <DataGridTextColumn Header="Açıklama" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Borç" Binding="{Binding Debit, StringFormat=N2}" Width="Auto">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Alacak" Binding="{Binding Credit, StringFormat=N2}" Width="Auto">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Bakiye" Binding="{Binding BalanceAfter, StringFormat=N2}" Width="Auto">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Yön" Binding="{Binding Direction}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock x:Name="Totals" Grid.Row="2" HorizontalAlignment="Right" Margin="0,8,0,0" />
    </Grid>
</Window>
