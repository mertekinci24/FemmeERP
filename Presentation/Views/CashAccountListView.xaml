<UserControl x:Class="InventoryERP.Presentation.Views.CashAccountListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:InventoryERP.Presentation.ViewModels.Cash">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Yeni Kasa/Banka"
                    Command="{Binding CreateAccountCmd}"
                    Margin="0,0,8,0"
                    Padding="12,6"
                    Background="#4CAF50"
                    Foreground="White"/>
        </StackPanel>
        <DataGrid ItemsSource="{Binding Accounts}"
                  SelectedItem="{Binding SelectedAccount}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Hesap Ekstresi" Command="{Binding OpenStatementCmd}"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Hesap Adı" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Tür" Binding="{Binding Type}" Width="Auto"/>
                <DataGridTextColumn Header="Para Birimi" Binding="{Binding Currency}" Width="Auto"/>
                <DataGridTextColumn Header="Bakiye" Binding="{Binding Balance, StringFormat=N2}" Width="Auto"/>
                <DataGridTextColumn Header="Banka" Binding="{Binding BankName}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
